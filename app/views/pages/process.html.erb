<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h1 class="h3 mb-0">Знайдені email-адреси</h1>
          <p class="text-muted mb-0">Файл: <%= @file_data[:name] %> | Знайдено: <%= @emails.size %> адрес</p>
        </div>
        
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Email адреса</th>
                  <th>Дія</th>
                </tr>
              </thead>
              <tbody>
                <% @emails.each_with_index do |email, index| %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><code><%= email %></code></td>
                    <td>
                      <%= button_to 'Перевірити', emails_path(email: { email: email }), 
                                   class: 'btn btn-sm btn-primary', 
                                   method: :post %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <div class="mt-4">
            <%= button_to 'Перевірити всі', bulk_validate_emails_path(emails: @emails),
                         class: 'btn btn-success btn-lg',
                         method: :post %>
            <%= link_to 'Назад', root_path, class: 'btn btn-outline-secondary btn-lg ml-2' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>